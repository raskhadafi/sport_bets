- content_for :header_left do
  = link_to @group_bet.group, @group_bet.group, 'data-role' => "button", 'data-mini' => true
  
= form_for @group_bet do |f|
  = f.hidden_field :group_id
  = f.collection_select :first_place_id,  team_collection(@group_bet.group), :id, :name, prompt: 'Team auswählen'
  = f.collection_select :second_place_id, team_collection(@group_bet.group), :id, :name, prompt: 'Team auswählen'
  = f.submit
